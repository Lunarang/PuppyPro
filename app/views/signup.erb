<h1>Please complete all the fields below to create an account:</h1>

<% if @user.errors.any? %>
  <div id="error_messages">
    <h2>Please correct the following errors to continue:</h2>
    <ul>
      <% @errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action='/signup' method="POST">

  <label for="name">Name:</label>
  <input type="text" id="name" name="user[name]" <%= if @user %>value="<%= @user.name %>"<% end %> required>

  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]" <%= if @user %>value="<%= @user.email %>"<% end %> required>

  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]" required>

  <input type="submit" value="Sign Up">
</form>

<a href="/login">Already have an account? Login instead.</a>