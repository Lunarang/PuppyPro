<!--[if IE 8]>    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>PuppyPro</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link href='https://fonts.googleapis.com/css?family=Annie Use Your Telescope' rel='stylesheet'>
  </head>

  <body>
    <% if current_path != '/login' && current_path != '/signup' %>
      <div class="sidebar">
        <% if logged_in? == true %>

          <h3>Welcome back, <%= current_user.name %>!</h3>
          <ul>
            <li><a href="/users/<%= current_user.id %>/edit">Edit Account</a></li>
            <li><a href="/home">Puppies</a></li>
            <li><a href="/library">Skill Library</a></li>
            <li><a href="/logout">Log Out</a></li>
          </ul>

        <% else %>

          <h3>Hello There!</h3>
          <p>To continue, please sign up or log in.</p>
          <div class="flex-display">
            <div class="flex-child"><a class="button" href="/signup">Sign Up</a></div>
            <div class="flex-child"><a class="button2" href="/login">Log In</a></div>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="wrapper">
      <div class="container">

      <% %w[notice error warning alert info].each do |key| %>
        <% if flash[key] %>
          <div id="#{key}" class="flash">
            <%= flash[key] %>
          </div>
        <% end %>
      <% end %>
      
        <%= yield %>

      </div>
      <footer class="branding">
        <small>&copy; 2022 <strong><a href="/">PuppyPro</a></strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
