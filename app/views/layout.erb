  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>PuppyPro</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>

  <body>
    <div class="wrapper">

      <div class="sidebar">
        <% if Helpers.logged_in?(session) %>
          <% user = Helpers.current_user(session) %>

          <h3><%= user.name %></h3>
          <a href="/users/<%= user.id %>/edit">Edit Account</a>

          <ul>
              <li><a href="/home">Puppies</a></li>
              <li><a href="/library">Skill Library</a></li>
              <li><a href="/logout">Log Out</a></li>
          </ul>

        <% else %>

          <h3>Welcome!</h3>
          <p>To continue, please sign up or log in.</p>

          <form action="/signup" method="GET">
            <input type="submit" value="Sign Up">
          </form>

          <form action="/login" method="GET">
            <input type="submit" value="Log In">
          </form>

        <% end %>
      </div>

      <% %w[notice error warning alert info].each do |key| %>
        <% if flash[key] %>
          <div id="#{key}" class="flash">
            <%= flash[key] %>
          </div>
        <% end %>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2022 <strong>PuppyPro</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
